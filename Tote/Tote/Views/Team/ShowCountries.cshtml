@model IEnumerable<Common.Models.Country>

@{
    ViewBag.Title = "Show Countries";
    Layout = "~/Views/LayoutView.cshtml";
}

<h2>ShowCountries</h2>

<p>
    @Html.ActionLink("Create New", "AddCountry")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCountry", new { countryId=item.CountryId }) |
            @Html.ActionLink("Delete", "DeleteCountry", new { countryId = item.CountryId })
        </td>
    </tr>
}

</table>

@model List<Common.Models.Sport>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/scripts/jquery-3.2.1.js"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js"></script>

@Html.ActionLink("Home", "List", "Navigation", null,
    new { @class = "btn btn-block btn-default btn-lg" })
<ul id="menuSport">
    @foreach (var sport in Model)
    {
    <li id=@sport.SportId>
        @Html.RouteLink(sport.Name, new
   {
       controller = "Navigation",
       action = "List",
       SportId= sport.SportId
   }, new
   {
       @class = "btn btn-block btn-default btn-lg"
            + (sport.SportId == ViewBag.SelectedCategory ? " btn-primary" : "")
   })
    </li>
    }
</ul>
<script type="text/javascript">
    $(function () {
        $("#menuSport li").each(function () {
            //alert("Click!");
            var id = $(this).attr("id");
            //alert(id);

            $.ajax({
                type: 'GET',
                url: '/Navigation/ChildTournament/' + id,
                //data: { id: $('#userId').val() },
                success: function (data) {
                    //alert("Hello");
                    $('ul#menuSport li#' + id).append(data);
                    //$('#menuSport li#' + id + ' .menuTournament').hide();
               }
            });
        })
    })
</script>

<script type="text/javascript">
    $(function () {
        $("#menuSport li").click(function () {
            //alert("Click!");
            var id = $(this).attr("id");
            //alert(id);
            if ($(this).is(':visible')) {
                $('#menuSport li#' + id + ' .menuTournament').show();
            }
            else {
                $('#menuSport li#' + id + ' .menuTournament').hide();
            }
              
        })
    })
</script>


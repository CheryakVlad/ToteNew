@model List<Common.Models.Bet>
@{
    Layout = @"\Views\MasterView.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Navigation</title>
</head>

<body>
    @foreach (var bet in Model)
    {
        @Html.RouteLink(bet.Match.Teams[0].Name.ToString()+" vs "+ bet.Match.Teams[1].Name.ToString(), new
   {
       controller = "Navigation",
       action = "Rate",
       id = bet.BetId
   }, new
   {
       @class = "btn btn-block btn-default btn-lg"

   })
    }
</body>
</html>

@model IEnumerable<Common.Models.Tournament>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowTournaments</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "AddTournament")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportId)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportId)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditTournament", new { id=item.TournamentId }) |
                @Html.ActionLink("Details", "Details", new { id=item.TournamentId }) |
                @Html.ActionLink("Delete", "DeleteTournament", new { id=item.TournamentId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>

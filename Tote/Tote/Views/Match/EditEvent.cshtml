@model List<Common.Models.Event>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditEvent</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Event</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @for(var i=0;i<Model.Count();i++)
            {
                @Html.HiddenFor(modelItem => modelItem[i].EventId)
                @Html.HiddenFor(modelItem => modelItem[i].MatchId)

                <div class="form-group">
                    @Html.LabelFor(modelItem => modelItem[i].Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(modelItem => modelItem[i].Name,  new { @class = "form-control" } )
                        @Html.ValidationMessageFor(modelItem => modelItem[i].Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(modelItem => modelItem[i].Coefficient, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(modelItem => modelItem[i].Coefficient,  new { @class = "form-control" })
                        @Html.ValidationMessageFor(modelItem => modelItem[i].Coefficient, "", new { @class = "text-danger" })
                    </div>
                </div>
                
            }
           
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "ShowMatches")
    </div>
</body>
</html>

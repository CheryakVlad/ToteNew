                    @Html.DisplayFor(modelItem => modelItem[0].Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(modelItem => modelItem[0].Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(modelItem => modelItem[0].Coefficient, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(modelItem => modelItem[0].Coefficient, new { @class = "form-control" })
                    @Html.ValidationMessageFor(modelItem => modelItem[0].Coefficient, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(modelItem => modelItem[1].EventId)
            @Html.HiddenFor(modelItem => modelItem[1].MatchId)

            <div class="form-group">
                @Html.LabelFor(modelItem => modelItem[1].Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(modelItem => modelItem[1].Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(modelItem => modelItem[1].Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(modelItem => modelItem[1].Coefficient, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(modelItem => modelItem[1].Coefficient, new { @class = "form-control" })
                    @Html.ValidationMessageFor(modelItem => modelItem[1].Coefficient, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(modelItem => modelItem[2].EventId)
            @Html.HiddenFor(modelItem => modelItem[2].MatchId)

            <div class="form-group">
                @Html.LabelFor(modelItem => modelItem[2].Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(modelItem => modelItem[2].Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(modelItem => modelItem[2].Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(modelItem => modelItem[2].Coefficient, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(modelItem => modelItem[2].Coefficient, new { @class = "form-control" })
                    @Html.ValidationMessageFor(modelItem => modelItem[2].Coefficient, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "ShowMatches")
    </div>
</body>
</html>

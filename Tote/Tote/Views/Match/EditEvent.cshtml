@model List<Common.Models.Event>

@{
    Layout = @"\Views\LayoutView.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditEvent</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Event</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(modelItem => modelItem[0].EventId)
            @Html.HiddenFor(modelItem => modelItem[0].MatchId)

            <div class="form-group">
                @Html.LabelFor(modelItem => modelItem[0].Name, htmlAttributes: new { @class = "control-label col-md-2" })

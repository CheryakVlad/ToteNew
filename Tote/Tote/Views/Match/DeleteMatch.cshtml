@model Common.Models.Match
@{
    Layout = @"\Views\LayoutView.cshtml"; //null;// @"\Views\MasterView.cshtml";
}
<br />
<br />
<br />
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Match</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                Sport
            </dt>

            <dd>
                @ViewBag.Sport
            </dd>
    
            <dt>
                Tournament
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Tournament.Name)
            </dd>

            <dt>
                Home Team
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Teams[0].Name)
            </dd>

            <dt>
                Guest Team
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Teams[1].Name)
            </dd>
    
            <dt>
                Result
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Result.Name)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Score)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Score)
            </dd>    
            
    
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            <input type="hidden" value=@Model.MatchId name="matchId" />
            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "ShowMatches")
            </div>
        }
    </div>


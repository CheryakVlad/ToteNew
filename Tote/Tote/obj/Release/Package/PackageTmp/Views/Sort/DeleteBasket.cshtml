@model Common.Models.Basket

@{
    ViewBag.Title = "DeleteBasket";
    Layout = "~/Views/LayoutView.cshtml";
}

<h2>DeleteBasket</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Basket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Match")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => modelItem.Match.Teams[0].Name) (@Html.DisplayFor(modelItem => modelItem.Match.Teams[0].Country.Name)) vs
            @Html.DisplayFor(modelItem => modelItem.Match.Teams[1].Name) (@Html.DisplayFor(modelItem => modelItem.Match.Teams[1].Country.Name))
        </dd>

        <dt>
            @Html.DisplayName("Date")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => modelItem.Match.Date)
        </dd> 
        
        <dt>
            @Html.DisplayName("Event")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => modelItem.Match.Events[0].Name)
        </dd>   
        
        <dt>
            @Html.DisplayName("Coefficient")
        </dt>

        <dd>
            @Html.DisplayFor(modelItem => modelItem.Match.Events[0].Coefficient)
        </dd>          

    </dl>

    @using (Html.BeginForm()) {        
        <input type="hidden" name="basketId" value=@Model.BasketId />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ShowBasket")
        </div>
    }
</div>
